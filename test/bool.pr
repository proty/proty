test = load("test")

test.run("and operator", do test {
    test.assertFalse(true and false)
    test.assertFalse(false and true)
    test.assertFalse(false and false)
    test.assertTrue(true and true)
})

test.run("or operator", do test {
    test.assertTrue(true or true)
    test.assertTrue(true or false)
    test.assertTrue(false or true)
    test.assertFalse(false or false)
})

test.run("not operator", do test {
    test.assertTrue(not false)
    test.assertFalse(not true)
})

test.run("string", do test {
    test.assertEqual(true.str(), "<true>")
    test.assertEqual(false.str(), "<false>")
})