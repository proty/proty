test = load("test")

test.run("app}", do test {
    a = "a"
    b = "b"
    c = "c"
    test.assertEqual(a+b+c, "abc")
})

test.run("compare", do test {
    test.assertTrue("xyz" == "xyz")
})

test.run("length", do test {
    a = ""
    test.assertEqual(a.length(), 0)
    b = "Hello World"
    test.assertEqual(b.length(), 11)
})

test.run("bool", do test {
    test.assertTrue("xyz".bool())
    test.assertFalse("".bool())
})

test.run("split", do test {
    str = "abc:def:ghi"
    list = str.split(":")
    test.assertEqual(list[0], "abc")
    test.assertEqual(list[1], "def")
    test.assertEqual(list[2], "ghi")
})